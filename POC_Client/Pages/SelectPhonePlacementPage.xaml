<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POC_Client.SelectPhonePlacementPage"
             Shell.NavBarIsVisible="false"
             Title="SelectPhonePlacementPage">

    <Grid RowDefinitions=".10*,.40*,.40*,.10*"
          ColumnDefinitions=".20*,.30*,.30*,.20*"
          Padding="50"
          >

        <Button Text ="1"
                x:Name="Button1"
                Grid.Column="1"
                Grid.Row="1"         
                FontSize="25"
                Clicked="OnButtonClicked">
        </Button>

        <Button Text ="2"   
                x:Name="Button2"
                Grid.Column="2"
                Grid.Row="1"
                FontSize="25"
                Clicked="OnButtonClicked">
        </Button>

        <Button Text ="3"
                x:Name="Button3"
                Grid.Column="1"
                Grid.Row="2"
                FontSize="25"
                Clicked="OnButtonClicked">
        </Button>

        <Button Text ="4"
                x:Name="Button4"
                Grid.Column="2"
                Grid.Row="2"
                FontSize="25"
                Clicked="OnButtonClicked">
        </Button>
    </Grid>
</ContentPage>